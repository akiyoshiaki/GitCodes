<!-- 共通テンプレート -->

<%= form_for @project do |f| %>

<p>
  <%= f.label :title %><br>
  <%= f.text_field :title %>
  <% if @project.errors.any? %>
  <%= @project.errors.messages[:title][0] %>
  <% end %>

</p>

<p>
  <!--奇妙に思えるが、これで/projects にPOSTされるのでcreateが呼ばれるらしい。 -->
  <%= f.submit %>
</p>


<% end %>
